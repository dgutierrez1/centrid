{
  "name": "@centrid/api",
  "version": "0.1.0",
  "private": true,
  "description": "Centrid backend application - Edge Functions, business logic, and database migrations",
  "type": "module",
  "scripts": {
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:serve": "supabase functions serve",
    "deploy": "supabase functions deploy --project-ref xennuhfmnucybtyzfgcl",
    "deploy:functions": "supabase functions deploy --project-ref xennuhfmnucybtyzfgcl",
    "deploy:function": "supabase functions deploy --project-ref xennuhfmnucybtyzfgcl",
    "deploy:safe": "bash ../../scripts/pre-deploy.sh && npm run deploy:functions",
    "deploy:functions:safe": "bash ../../scripts/pre-deploy.sh && npm run deploy:functions",
    "db:drop": "npx @dotenvx/dotenvx run -f .env.remote -- tsx src/db/drop.ts",
    "db:drop:local": "npx @dotenvx/dotenvx run -f .env.local -- tsx src/db/drop.ts",
    "db:push": "npx @dotenvx/dotenvx run -f .env.remote -- tsx src/db/push.ts",
    "db:push:local": "npx @dotenvx/dotenvx run -f .env.local -- tsx src/db/push.ts",
    "db:query": "npx @dotenvx/dotenvx run -f .env.remote -- tsx scripts/db-query.ts",
    "db:query:local": "npx @dotenvx/dotenvx run -f .env.local -- tsx scripts/db-query.ts",
    "logs": "tsx scripts/query-api-logs.ts",
    "logs:errors": "tsx scripts/query-api-logs.ts --errors",
    "logs:threads": "tsx scripts/query-api-logs.ts --route='/api/threads'",
    "logs:recent": "tsx scripts/query-api-logs.ts --hours=1",
    "test": "npx @dotenvx/dotenvx run -f .env.remote -- vitest run",
    "test:local": "npx @dotenvx/dotenvx run -f .env.local -- vitest run",
    "test:watch": "npx @dotenvx/dotenvx run -f .env.remote -- vitest",
    "test:watch:local": "npx @dotenvx/dotenvx run -f .env.local -- vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@pothos/core": "^4.2.0",
    "@pothos/plugin-dataloader": "^4.2.0",
    "@pothos/plugin-validation": "^4.2.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/pg": "^8.15.5",
    "dataloader": "^2.2.3",
    "drizzle-orm": "^0.44.6",
    "graphql": "^16.12.0",
    "graphql-upload": "^17.0.0",
    "graphql-yoga": "^5.10.6",
    "hono": "^4.7.11",
    "openai": "^6.6.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/deno": "^2.5.0",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.6.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "supabase": "^2.53.6",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}
