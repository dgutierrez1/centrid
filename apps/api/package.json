{
  "name": "@centrid/api",
  "version": "0.1.0",
  "private": true,
  "description": "Centrid backend application - Edge Functions, business logic, and database migrations",
  "type": "module",
  "scripts": {
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:types": "supabase gen types typescript --local > ../../packages/shared/src/types/database.ts",
    "supabase:serve": "supabase functions serve",
    "deploy": "supabase functions deploy --project-ref xennuhfmnucybtyzfgcl",
    "deploy:functions": "supabase functions deploy --project-ref xennuhfmnucybtyzfgcl",
    "deploy:function": "supabase functions deploy --project-ref xennuhfmnucybtyzfgcl",
    "db:drop": "tsx src/db/drop.ts",
    "db:push": "tsx src/db/push.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@centrid/shared": "file:../../packages/shared",
    "@types/pg": "^8.15.5",
    "drizzle-orm": "^0.44.6",
    "openai": "^6.6.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "supabase": "^2.53.6",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  }
}
