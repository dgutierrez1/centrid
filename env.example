# Centrid AI Filesystem - Environment Variables Example
# Version: 3.1 - Supabase Plus MVP Architecture
# 
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Mercado Pago Configuration (for Colombian billing)
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key
MERCADO_PAGO_WEBHOOK_SECRET=your_webhook_secret

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Development Configuration
NODE_ENV=development

# Optional: Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn
VERCEL_ENV=development

# Optional: Custom Configuration
MAX_FILE_SIZE_MB=10
MAX_USAGE_FREE=100
MAX_USAGE_PRO=1000
MAX_USAGE_ENTERPRISE=10000
