{
  "name": "centrid-ai",
  "version": "3.1.0",
  "description": "Centrid AI Filesystem - Mobile-first AI agent workspace with document management (Monorepo)",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "web:dev": "npm run dev --workspace=apps/web",
    "design:dev": "npm run dev --workspace=@centrid/design-system",
    "api:supabase": "npm run supabase:start --workspace=@centrid/api",
    "api:types": "npm run supabase:types --workspace=@centrid/api"
  },
  "devDependencies": {
    "shadcn": "^3.4.2",
    "supabase": "^1.123.4",
    "turbo": "^1.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "document-management",
    "nextjs",
    "supabase",
    "typescript",
    "pwa"
  ],
  "author": "Centrid AI Team",
  "license": "MIT"
}
