{
  "name": "centrid-ai",
  "version": "3.1.0",
  "description": "Centrid AI Filesystem - Mobile-first AI agent workspace with document management (Monorepo)",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev",
    "dev:local": "turbo run dev:local",
    "build": "turbo run build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "turbo run type-check",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "validate": "npm run type-check && npm run lint",
    "test": "turbo run test",
    "test:api": "npm run test --workspace=@centrid/api",
    "test:web": "npm run test --workspace=web",
    "test:ui": "npm run test --workspace=@centrid/ui",
    "test:coverage": "turbo run test:coverage",
    "web:dev": "npm run dev --workspace=apps/web",
    "design:dev": "npm run dev --workspace=@centrid/design-system",
    "api:supabase": "npm run supabase:start --workspace=@centrid/api",
    "api:deploy": "npm run deploy:functions --workspace=@centrid/api",
    "deploy": "npm run deploy:functions:safe --workspace=@centrid/api",
    "deploy:safe": "npm run deploy:functions:safe --workspace=@centrid/api",
    "deploy:functions": "npm run deploy:functions --workspace=@centrid/api",
    "validate:architecture": "tsx scripts/validate-architecture.ts",
    "logs": "tsx apps/api/scripts/query-api-logs.ts",
    "logs:errors": "tsx apps/api/scripts/query-api-logs.ts --errors",
    "logs:threads": "tsx apps/api/scripts/query-api-logs.ts --route='/api/threads'",
    "logs:recent": "tsx apps/api/scripts/query-api-logs.ts --hours=1",
    "db:query": "npm run db:query --workspace=@centrid/api",
    "db:query:local": "npm run db:query:local --workspace=@centrid/api",
    "sync-docs": "node --loader ts-node/esm .specify/sync/sync-docs.ts 2>/dev/null || npx tsx .specify/sync/sync-docs.ts"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-urql": "^4.0.1",
    "@types/glob": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "drizzle-orm": "^0.44.7",
    "eslint": "^8.57.1",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "shadcn": "^3.4.2",
    "tsx": "^4.20.6",
    "turbo": "^1.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "document-management",
    "nextjs",
    "supabase",
    "typescript",
    "pwa"
  ],
  "author": "Centrid AI Team",
  "license": "MIT",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "graphql": "^16.12.0",
    "urql": "^5.0.1"
  }
}
