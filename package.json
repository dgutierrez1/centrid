{
  "name": "centrid-ai",
  "version": "3.1.0",
  "description": "Centrid AI Filesystem - Mobile-first AI agent workspace with document management (Monorepo)",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "turbo run type-check",
    "web:dev": "npm run dev --workspace=apps/web",
    "design:dev": "npm run dev --workspace=@centrid/design-system",
    "api:supabase": "npm run supabase:start --workspace=@centrid/api",
    "api:types": "npm run supabase:types --workspace=@centrid/api",
    "deploy": "npm run deploy:functions:safe --workspace=@centrid/api",
    "deploy:safe": "npm run deploy:functions:safe --workspace=@centrid/api"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "shadcn": "^3.4.2",
    "supabase": "^1.123.4",
    "turbo": "^1.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "document-management",
    "nextjs",
    "supabase",
    "typescript",
    "pwa"
  ],
  "author": "Centrid AI Team",
  "license": "MIT",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
